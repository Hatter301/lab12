#include <iostream>
using namespace std;
int i,f=1,n;
double Fact2(int n) {
	if ((n % 2) == 0) 
		for (i = 2; i <= n; i = i + 2)
			f = f * i;
	else {
		for(i=3;i<=n;i=i+2)
			f = f * i;
	}
	return f;
}
int main() {
	cin >> n;
	if (n <= 0)
		cout << "Данные введены некорректно";
	else cout << Fact2(n);
}
